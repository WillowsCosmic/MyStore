<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/sign-up.css">
    <link rel="icon" href="/images/fruits.png" type="image/png">
    <title>Sign up</title>
</head>

<body>
    <%- include('./includes/navbar') %>

        <div class="container-fluid mt-4 form-container">
            <form class="w-25 " action="/sign-up" method="post" onsubmit="validatePassword()">
                <h2 class="fw-bold fs-3 m-4 mb-2">Sign Up</h2>
                <div class="form-control m-3 p-4">
                    <div class="row">
                        <label class="form-label">Username 
                            <span
                                class="fs-6 text-secondary fst-italic">(Email)</span></label>
                        <div class="col-12 my-1">
                            <input type="text" name="userName" placeholder="name@example.com" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <label class="form-label">Password</label>
                        <div class="col-10 my-1">
                            <input type="password" name="password" placeholder="password" id="passwordInp" onkeyup="validatePassword()" class="form-control" />
                        </div>
                        <div class="mt-12 mb-3 my-1 col-2 btn">
                            <i 
                                class="bi bi-eye-slash"
                                name="passwordHidden"
                                onclick="toggleDisplay(this)"
                                
                            ></i>
                        </div>
                    </div>
                    <div class="row">
                        <label class="form-label">Confirm Password</label>
                        <div class="col-10 my-1">
                            <input type="password" name="confirmPassword" placeholder="confirm password" onkeyup="validatePassword()" id="confirmPasswordInp" class="form-control" />
                        </div>
                        <div class="mt-12 mb-3 my-1 col-2 btn">
                            <i 
                                class="bi bi-eye-slash"
                                name="confirmPasswordHidden"
                                onclick="toggleDisplay(this)"
                            ></i>
                        </div>
                        <div id="helper-text" class="text-danger"></div>
                    </div>
                </div>
                <button class="btn btn-primary fs-4 m-3 w-100">Sign Up</button>
            </form>
        </div>
        <script>
             let passwordInp = document.getElementById("passwordInp")
             let confirmPasswordInp = document.getElementById("confirmPasswordInp")

             const toggleDisplay = (e) =>{
                let selectedToggle = e.getAttribute("name")

                switch (selectedToggle) {
                    case "passwordHidden":
                        passwordInp.type="text";
                        e.className = "bi bi-eye";
                        e.setAttribute("name","passwordVisible")
                        break;
                    case "passwordVisible":
                        passwordInp.type="password";
                        e.className = "bi bi-eye-slash";
                        e.setAttribute("name","passwordHidden")
                        break;
                    case "confirmPasswordHidden":
                        confirmPasswordInp.type="text";
                        e.className = "bi bi-eye";
                        e.setAttribute("name","confirmPasswordVisible")
                        break;
                    case "confirmPasswordVisible":
                        confirmPasswordInp.type="password";
                        e.className = "bi bi-eye-slash";
                        e.setAttribute("name","confirmPasswordHidden")
                        break;
                
                    default:
                        break;
                }
             }
        
             const validatePassword = () =>{
                if(passwordInp.value === confirmPasswordInp.value){
                    document.getElementById("helper-text").innerHTML="";
                    return true;
                }
                else{
                    document.getElementById("helper-text").innerHTML="Passwords do not match";
                    return false;
                }
             }
        </script>
</body>

</html>